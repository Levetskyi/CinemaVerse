@model IEnumerable<Movie>

<div class="movies-table">
    <div class="table-header">

        <p>All Movies</p>

        <div class="table-options">
            <input placeholder="Search for a movie" />
            <a class="add-new" asp-controller="Movies" asp-action="Create">Add new</a>
        </div>
       
    </div>

    <div class="table-section">

        <table>

            <thead>

                <tr>

                    <th>Nr.</th>
                    <th>Poster</th>
                    <th>Name</th>
                    <th>Year</th>
                    <th>Actions</th>

                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td> <img src="@item.PosterImageURL" alt="poster"/></td>
                        <td>@item.Name</td>
                        <td>@item.Year</td>
                        <td>
                            <a class="edit" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="delete" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>